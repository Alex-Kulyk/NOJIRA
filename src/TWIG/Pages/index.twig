{% extends '../Layouts/layout.twig' %}
{% block title %}
  index page
{% endblock %}

{% block content %}
  {% for article in articles|slice(0, 1) %}
    {% include '../Blocks/card.twig' with {
      title: article.title,
      path: article.image_path,
      description: article.description,
      link: article.link,
      author: article.author,
      type: article.type
    } only %}
  {% endfor %}

  {% for blog in blogs|slice(2, 1) %}
    {% include '../Blocks/card.twig' with {
      title: blog.title,
      path: blog.image_path,
      description: blog.description,
      link: blog.link,
      author: blog.author,
      type: blog.type
    } only %}
  {% endfor %}
{% endblock %}
